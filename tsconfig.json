{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "inlineSourceMap": true,
    "lib": ["esnext.array", "esnext", "es2017", "dom", "es5"],
    "module": "es2015",
    "moduleResolution": "node",
    "removeComments": false,
    "strict": true,
    "target": "es5",
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    "src/**/*.test.ts",
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}